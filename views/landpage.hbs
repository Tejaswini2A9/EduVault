    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/college-bg.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 150px 0;
            text-align: center;
        }

        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .hero-section p {
            font-size: 1.5rem;
            margin-bottom: 30px;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .btn-get-started {
            background-color: #0d6efd;
            color: white;
            padding: 12px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 30px;
            text-decoration: none;
            transition: all 0.3s;
            border: 2px solid #0d6efd;
        }

        .btn-get-started:hover {
            background-color: transparent;
            color: white;
            border-color: white;
        }

        .feature-section {
            padding: 80px 0;
        }

        .feature-card {
            text-align: center;
            padding: 30px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
            height: 100%;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .feature-icon {
            font-size: 48px;
            color: #0d6efd;
            margin-bottom: 20px;
        }

        .feature-title {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .feature-description {
            color: #6c757d;
            font-size: 16px;
        }

        .about-section {
            background-color: #f8f9fa;
            padding: 80px 0;
        }

        .about-image {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .about-image img {
            width: 100%;
            height: auto;
        }

        .about-content h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #212529;
        }

        .about-content p {
            font-size: 1.1rem;
            color: #6c757d;
            margin-bottom: 20px;
        }

        .stats-section {
            padding: 60px 0;
            background-color: #0d6efd;
            color: white;
        }

        .stat-item {
            text-align: center;
            padding: 20px;
        }

        .stat-value {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .stat-label {
            font-size: 1.2rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
    </style>
</head>

